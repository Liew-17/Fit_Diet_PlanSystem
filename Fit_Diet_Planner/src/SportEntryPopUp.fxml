<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SportEntryPopUpController">

    <Label fx:id="headerLabel" layoutX="20" layoutY="10" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="New Exercise Entry" />

    <VBox layoutX="20.0" layoutY="38.0" prefHeight="117.0" prefWidth="460.0" spacing="5">
      <GridPane prefHeight="109.0" prefWidth="460.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="224.4000244140625" minWidth="10.0" prefWidth="121.59996337890625" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="352.6000320434571" minWidth="10.0" prefWidth="338.40003662109376" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
                <Label text="Exercise Name:" GridPane.rowIndex="1" />
                <Label fx:id="exerciseNameLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="MET:" GridPane.rowIndex="2" />
                <Label fx:id="exerciseMetLabel" prefHeight="18.0" prefWidth="84.0" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Type:" GridPane.rowIndex="3" />
                <Label fx:id="exerciseTypeLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label fx:id="secPerRepHintLabel" text="Sec per Rep (default):" GridPane.rowIndex="4" />
            <Label fx:id="secPerRepLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         </children>
      </GridPane>
    </VBox>

    <Separator layoutY="170.0" prefHeight="3.0" prefWidth="500.0" />

    <VBox layoutX="20" layoutY="180" prefWidth="460" spacing="10">

        <Label text="Weight (kg):" />
        <TextField fx:id="weightField" prefHeight="26.0" prefWidth="246.0" promptText="Enter weight" />

        <!-- StackPane to show either Rep-based fields or Time-based fields -->
        <StackPane fx:id="exerciseInputStack" prefWidth="460">
         <HBox fx:id="timeBasedPane" alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="460.0" spacing="20" visible="false">
            <children>
                   <VBox prefHeight="48.0" prefWidth="460.0" spacing="5">
                       <Label text="Duration (min):" />
                       <TextField fx:id="durationField" prefHeight="26.0" prefWidth="166.0" promptText="Enter duration" />
                   </VBox>
            </children>
         </HBox>

            <!-- Rep-based input -->
            <HBox fx:id="repBasedPane" alignment="CENTER_LEFT" spacing="20">
                <VBox spacing="5">
                    <Label text="Reps:" />
                    <TextField fx:id="repsField" promptText="Enter reps" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Sets:" />
                    <TextField fx:id="setsField" promptText="Enter sets" />
                </VBox>
                <VBox spacing="5">
                    <Label text="Sec per Rep:" />
                    <TextField fx:id="secPerRepField" promptText="Enter seconds" />
                </VBox>
            </HBox>

        </StackPane>
      <Label text="Estimated Calories Burned:" />
      <Label fx:id="caloriesPreviewLabel" style="-fx-font-weight: bold;" text="0 kcal" />
      <Label text="Entry Type:" />
      <HBox spacing="20">
         <children>
            <RadioButton fx:id="plannedRadio" selected="true" text="Planned">
               <toggleGroup>
                  <ToggleGroup fx:id="entryTypeGroup" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="actualRadio" text="Actual" toggleGroup="$entryTypeGroup" />
         </children>
      </HBox>

        <Label text="Note:" />
        <TextArea fx:id="noteArea" promptText="Optional note" />

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="deleteBtn" onAction="#deleteEntry" prefWidth="80" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
            <Pane prefHeight="5.0" prefWidth="200.0" />
            <Button onAction="#cancel" prefWidth="80" text="Cancel" />
            <StackPane prefHeight="17.0" prefWidth="80.0">
                <children>
                    <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updateEntry" prefWidth="80.0" text="Update" />
                    <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveEntry" prefWidth="80.0" text="Save" />
                </children>
            </StackPane>
        </HBox>

    </VBox>

    <padding>
        <Insets bottom="10.0" />
    </padding>

</AnchorPane>
