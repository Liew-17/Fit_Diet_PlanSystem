<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FoodEntryPopUpController">


    <Label fx:id="headerLabel" layoutX="20" layoutY="10" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="New Entry" />

    <VBox layoutX="20.0" layoutY="38.0" prefHeight="103.0" prefWidth="460.0" spacing="5">
      <GridPane prefHeight="99.0" prefWidth="440.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="170.39996337890625" minWidth="10.0" prefWidth="111.19999542236329" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="357.2000076293946" minWidth="10.0" prefWidth="348.80000457763674" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="1.7976931348623157E308" minHeight="21.6" />
          <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
              <Label fx:id="foodNameLabel" text="Food Name" GridPane.columnIndex="1" />
              <Label fx:id="foodCategoryLabel" text="Category" GridPane.columnIndex="1" GridPane.rowIndex="1" />
              <Label fx:id="foodCaloriesLabel" text="Calories per 100g" GridPane.columnIndex="1" GridPane.rowIndex="2" />
              <Label fx:id="foodGramPerServingLabel" text="Gram per serving" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Name:" />
            <Label text="Category:" GridPane.rowIndex="1" />
            <Label prefHeight="18.0" prefWidth="172.0" text="Gram (default):" GridPane.rowIndex="3" />
            <Label text="Calories:" GridPane.rowIndex="2" />
         </children>
      </GridPane>
    </VBox>
   <Separator layoutY="148.0" prefHeight="3.0" prefWidth="500.0" />

    <VBox layoutX="20" layoutY="160" prefWidth="460" spacing="10">
        <Label text="Quantity (pcs):" />
        <TextField fx:id="quantityField" promptText="Enter quantity" />

        <Label text="Gram per serving (g):" />
        <TextField fx:id="gramField" promptText="Enter grams" />
   

       <Label text="Calorie Intake:" />
       <Label fx:id="caloriesPreviewLabel" style="-fx-font-weight: bold;" text="0 kcal" />

        <Label text="Entry Type:" />
        <HBox spacing="20">
            <RadioButton fx:id="plannedRadio" selected="true" text="Planned">
            <toggleGroup>
               <ToggleGroup fx:id="entryTypeGroup" />
            </toggleGroup></RadioButton>
            <RadioButton fx:id="actualRadio" text="Actual" toggleGroup="$entryTypeGroup" />
        </HBox>

        <Label text="Note:" />
        <TextArea fx:id="noteArea" promptText="Optional note" />
   

		 <HBox alignment="CENTER_RIGHT" layoutX="20" layoutY="420" spacing="10">
		
	   		<Button fx:id="deleteBtn" onAction="#deleteEntry" prefWidth="80" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete" />
         <Pane prefHeight="5.0" prefWidth="200.0" />
		    <Button onAction="#cancel" prefWidth="80" text="Cancel" />
         <StackPane prefHeight="17.0" prefWidth="80.0">
            <children>
               <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updateEntry" prefWidth="80.0" text="Update" />
               <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveEntry" prefWidth="80.0" text="Save" />
            </children>
         </StackPane>
		</HBox>
    </VBox>
   <padding>
      <Insets bottom="10.0" />
   </padding>

</AnchorPane>
